<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href={{ asset('build/images/home.png') }}>
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body {{ stimulus_controller('theme') }} {{ stimulus_target('theme', 'body') }}>
        <header>
            {% include '_navbar.html.twig' %}
         </header>
  			{% block alert %}
				{% for category, messages in app.flashes %}
					{% for message in messages %}
						<div class="alert alert-{{ category }}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}
			{% endblock %}
        {% block body %}
        {% endblock %}
    </body>
</html>
