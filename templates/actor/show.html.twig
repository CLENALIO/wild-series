{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>           
        </tbody>
    </table>
    <h2>Liste des series dans lesquelles l'acteur a joué</h2>
        {% for program in programs %}
            <div>
                <h2>{{ loop.index }} / {{ program.title }} </h2>
                <p>{{ program.synopsis }}</p>
                <a href="{{ path("program_show", { 'slug': program.slug }) }}">Voir la fiche</a>
            </div>
        {% else %}
            Aucune série trouvée.
        {% endfor %} 

    <a href="{{ path('app_actor_index') }}">back to list</a>

    <a href="{{ path('app_actor_edit', {'slug': actor.slug}) }}">edit</a>

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
