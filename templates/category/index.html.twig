{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Liste des catégories</h1>
    {% for category in categories %}
        <div>
            <h2>{{ loop.index }} / {{ category.name }} </h2>
            <a href="{{ path("category_show", { categoryName : category.name }) }}" class="btn btn-warning">Voir la fiche</a>

        </div>
    {% else %}
        Aucune catégorie trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}" class="btn btn-info">
        Retour à l'accueil
    </a>
{% endblock %}