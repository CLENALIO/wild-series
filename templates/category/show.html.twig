{% extends 'base.html.twig' %}

{% block title %}{{ category.name }}{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Toutes les séries de la catégorie {{ category.name }} : </h1>

    <table class="table table-white table-hover table-borderless">
                {% for program in programs %}
                <thead>
                <tr>
            <th scope="row">#</th>
            <th scope="row">Titre</th>
            <th scope="row">Synopsis</th>
            <th scope="row"></th>
            <tr>
            <thead>
                    <tbody>
            <tr>
            <th scope="col">{{ loop.index }} </th>
            <td scope="col">{{ program.title }} </td>
            <td scope="col">{{ program.synopsis }}</td>
            <td scope="col"><a href="{{ path("program_show", { 'slug': program.slug }) }}" class="btn btn-secondary my-1 mx-4">Voir la série</a></td>
                {% else %}
                Aucune série trouvée.
                {% endfor %}
            </tr>           
        </tbody>
    </table>

    <a href="{{ path('category_index') }}" class="btn btn-info my-2 mx-4">
        Retour à la liste des categories
    </a>
{% endblock %}
